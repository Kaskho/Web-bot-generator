<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ coin_name }} â€” Launchpad</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <style>
    body{font-family:Inter,system-ui;background:#071024;color:#E6F0FF;padding:24px}
    .card{max-width:900px;margin:40px auto;background:rgba(255,255,255,0.03);padding:28px;border-radius:12px}
    h1{font-size:36px;margin:0}
    pre{white-space:pre-wrap;background:rgba(0,0,0,0.2);padding:12px;border-radius:8px}
    .links a{display:inline-block;margin-right:10px;padding:8px 12px;border-radius:8px;text-decoration:none;background:#08213a;color:#bff0c1}
  </style>
</head>
<body>
  <div class="card">
    <h1>{{ coin_name }} <small>({{ ticker }})</small></h1>
    <p><strong>{{ tagline }}</strong></p>
    <p>{{ intro | replace('\n','<br>') | safe }}</p>

    {% if media_filename %}
      <div style="margin:18px 0;">
        {% if media_filename.endswith('.mp4') or media_filename.endswith('.webm') %}
          <video controls style="width:100%;border-radius:8px"><source src="./{{ media_filename }}"></video>
        {% else %}
          <img src="./{{ media_filename }}" alt="media" style="max-width:100%;border-radius:8px"/>
        {% endif %}
      </div>
    {% endif %}

    <h3>Roadmap</h3>
    <pre>{{ roadmap }}</pre>

    <div class="links">
      <a href="{{ pump_fun }}">Buy on {{ network }}</a>
      <a href="{{ x_url }}">X</a>
      <a href="{{ telegram_url }}">Telegram</a>
    </div>
  </div>
</body>
</html>
